@page
@model Certera.Web.Pages.Setup.AcmeModel

@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Setup";
}

@section Head {
    <style>
        label {
            display: inline-block;
        }
        .container {
            margin-top: 120px;
        }
    </style>
}

<section class="container">
    <div class="row">
        <div class="column column-80 column-offset-10">
            <h3>
                Setup - Let's Encrypt Account
            </h3>
            <hr />
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <label asp-for="Setup.AcmeContactEmail"></label>
                    <label class="required"> *</label>
                    <input asp-for="Setup.AcmeContactEmail" />
                    <span asp-validation-for="Setup.AcmeContactEmail" class="text-danger"></span>
                </div>
                <div>
                    <label>Let's Encrypt Account Key</label>
                    <div>
                        <small class="text-muted">(Optional. Upload an existing key or a new one will be created and saved)</small>
                    </div>
                    <input class="form-control" type="file" name="AccountKeyFile" />
                    <span asp-validation-for="Setup.AccountKeyFile" class="text-danger"></span>
                </div>
                <div>
                    <label>
                        <input asp-for="Setup.AcmeAcceptTos" />
                        Accept Let's Encrypt's <a href="@Model.TermsOfService">Terms of Service</a>
                    </label>
                    <label class="required"> *</label>
                </div>
                <div>
                    <input type="submit" value="Submit" />
                </div>
            </form>
        </div>
    </div>
</section>