@page
@model Certera.Web.Pages.Setup.ServerModel

@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Setup";
}

@section Head {
    <style>
        label {
            display: inline-block;
        }

        .container {
            margin-top: 120px;
        }
    </style>
}

<section class="container">
    <div class="row">
        <div class="column column-80 column-offset-10">
            <h3>
                Setup - Server
            </h3>
            <hr />
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <label>Site Hostname</label>
                    <span class="required"> *</span>
                    <div>
                        <small class="text-muted">(e.g. cert.mysite.com)</small>
                    </div>
                    <input asp-for="Setup.SiteHostname" />
                    <span asp-validation-for="Setup.SiteHostname" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Setup.HttpsPort"></label>
                    <input asp-for="Setup.HttpsPort" value="443" readonly="readonly" />
                    <span asp-validation-for="Setup.HttpsPort" class="text-danger"></span>
                </div>
                <environment include="Development">
                    <div>
                        <label>
                            <input asp-for="Setup.UseAcmeStaging" />
                            Use ACME staging
                        </label>
                    </div>
                </environment>
                <div>
                    <input type="submit" value="Submit" />
                </div>
            </form>
        </div>
    </div>
</section>