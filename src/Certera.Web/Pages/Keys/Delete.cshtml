@page "{id}"
@model Certera.Web.Pages.Keys.DeleteModel

@{
    ViewData["Title"] = "Delete";
    ViewData["ActivePage"] = ManageNavPages.Keys;
}

<div class="content-title">
    <i class="icon-key page-icon"></i> Keys - Delete
</div>
<div class="content-wrapper">
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row">
        <a class="button button-small" asp-page="./Edit" asp-route-id="@Model.Key.KeyId">Edit</a>
        <h4>Are you sure you want to delete this?</h4>
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Key.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Key.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Key.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Key.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Key.DateCreated)
            </dt>
            <dd>
                @Model.Key.DateCreated.ToLocalTime().ToString()
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Key.Algorithm)
            </dt>
            <dd>
                <span class="badge badge-info">@Model.Key.Algorithm</span>
            </dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Key.KeyId" />
            <button type="submit" class="button-small">Delete</button>
        </form>
    </div>
</div>
